		"events": {
			"vc:place": {
				"set_block_state": {
					"vc:face": "(query.cardinal_player_facing)"
				}
			},
			"vc:grow": {
				"randomize": [
					{
						"weight": 1
					},
					{
						"weight": 2,
						"set_block_state": {
							"vc:growth": "query.block_state('vc:growth') + 1"
						}
					}
				]
			},
			"vc:forcegrow": {
				"randomize": [
					{
						"weight": 1
					},
					{
						"weight": 10,
						"set_block_state": {
							"vc:growth": "query.block_state('vc:growth') + 1"
						},
						"decrement_stack": {},
						"run_command": {
							"command": [
								"particle minecraft:crop_growth_emitter ~~~",
								"playsound item.bone_meal.use @a ~~~"
							]
						}
