			"minecraft:tick": {
				"interval_range": [
					1,
					1
				],
				"looping": true
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "vc_die_3",
					"render_method": "alpha_test"
				},
				"east": {
					"texture": "vc_die_2",
					"render_method": "alpha_test"
				},
				"south": {
					"texture": "vc_die_6",
					"render_method": "alpha_test"
