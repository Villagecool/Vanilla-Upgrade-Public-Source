{
	"format_version": "1.21.40",
	"minecraft:block": {
		"description": {
			"identifier": "vc:breezer",
			"menu_category": {
				"category": "items",
				"group": "itemGroup.name.anchors"
			},
			"states": {
				"vc:powered": [
					false,
					true
				]
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": [
						"minecraft:facing_direction"
					]
				}
			}
		},
		"components": {
			//"minecraft:on_placed": {
			//	"event": "vc:redstone"
			//},
			//"minecraft:random_ticking": {
			//	"on_tick": {
			//		"event": "vc:redstone"
			//	}
			//},
			"tag:minecraft:is_pickaxe_item_destructible": {},
			"minecraft:redstone_conductivity": {
				"allows_wire_to_step_down": true,
				"redstone_conductor": true
			},
			"minecraft:tick": {
				"interval_range": [
					1,
					1
				],
				"looping": true
			},
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 20
			},
			"minecraft:custom_components": [
				"vc:breezer",
				"vc:redstone"
			],
			"minecraft:geometry": "geometry.breezer",
			"minecraft:material_instances": {
				"*": {
					"texture": "vc_breezer_side",
					"render_method": "alpha_test"
				},
				"front": {
					"texture": "vc_breezer_front",
					"render_method": "alpha_test"
				},
				"back": {
					"texture": "vc_breezer_back",
					"render_method": "alpha_test"
				},
				"blades": {
					"texture": "vc_breezer_blades",
					"render_method": "alpha_test"
				},
				"breeze": {
					"texture": "vc_breeze",
					"render_method": "alpha_test",
					"ambient_occlusion": false,
					"face_dimming": false
				},
				"blaze": {
					"texture": "vc_air",
					"render_method": "alpha_test",
					"ambient_occlusion": false,
					"face_dimming": false
				}
			}
		},
		"permutations": [
			{
				"condition": "query.block_state('vc:powered') == false",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "vc_breezer_side",
							"render_method": "alpha_test"
						},
						"front": {
							"texture": "vc_breezer_front",
							"render_method": "alpha_test"
						},
						"back": {
							"texture": "vc_breezer_back",
							"render_method": "alpha_test"
						},
						"blades": {
							"texture": "vc_deactive_breezer_blades",
							"render_method": "alpha_test"
						},
						"breeze": {
							"texture": "vc_breeze",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"face_dimming": false
						},
						"blaze": {
							"texture": "vc_air",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"face_dimming": false
						}
					}
				}
			},
			{
				"condition": "query.block_state('minecraft:facing_direction') == 'north'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							180,
							0
						]
					}
				}
			},
			{
				"condition": "query.block_state('minecraft:facing_direction') == 'east'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							90,
							0
						]
					}
				}
			},
			{
				"condition": "query.block_state('minecraft:facing_direction') == 'west'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							270,
							0
						]
					}
				}
			},
			{
				"condition": "query.block_state('minecraft:facing_direction') == 'up'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							-90,
							0,
							0
						]
					}
				}
			},
			{
				"condition": "query.block_state('minecraft:facing_direction') == 'down'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							90,
							0,
							0
						]
					}
				}
			}
		]
	}
}