{
	"format_version": "1.21.50",
	"minecraft:block": {
		"description": {
			"identifier": "vc:advanced_hopper",
			"menu_category": {
				"category": "items",
				"group": "itemGroup.name.redstone"
			},
			"traits": {
				"minecraft:placement_position": {
					"enabled_states": [
						"minecraft:block_face"
					]
				}
			},
			"states": {
				"vc:powered": [
					false,
					true
				],
				"vc:changeable": [
					true,
					false
				]
			}
		},
		"components": {
			"tag:minecraft:is_pickaxe_item_destructible": {},
			"minecraft:geometry": "geometry.advanced_hopper",
			"minecraft:light_dampening": 5,
			"minecraft:map_color": "#27272b",
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 20
			},
			"minecraft:liquid_detection": {
				"detection_rules": [
					{
						"can_contain_liquid": true,
						"liquid_type": "water"
					}
				]
			},
			"minecraft:display_name": "tile.vc:advanced_hopper.name",
			"minecraft:custom_components": [
				"vc:advanced_hopper",
				"vc:redstone"
			],
			"minecraft:redstone_conductivity": {
				"allows_wire_to_step_down": true,
				"redstone_conductor": true
			},
			"minecraft:tick": {
				"interval_range": [
					1,
					1
				],
				"looping": true
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "vc_advanced_hopper",
					"render_method": "alpha_test"
				},
				"arrow": {
					"texture": "vc_advanced_hopper_side",
					"render_method": "alpha_test"
				},
				"inside": {
					"texture": "hopper_inside",
					"render_method": "alpha_test"
				},
				"outside": {
					"texture": "hopper_outside",
					"render_method": "alpha_test"
				},
				"top": {
					"texture": "hopper_top",
					"render_method": "alpha_test"
				},
				"block": {
					"texture": "vc_electrum",
					"render_method": "alpha_test"
				},
				"grate": {
					"texture": "vc_gloricalium_grate",
					"render_method": "alpha_test"
				}
			}
		},
		"permutations": [
			{
				"condition": "query.block_state('vc:powered') == true",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "vc_advanced_hopper_on",
							"render_method": "alpha_test"
						},
						"arrow": {
							"texture": "vc_advanced_hopper_side_on",
							"render_method": "alpha_test"
						},
						"inside": {
							"texture": "hopper_inside",
							"render_method": "alpha_test"
						},
						"outside": {
							"texture": "hopper_outside",
							"render_method": "alpha_test"
						},
						"top": {
							"texture": "hopper_top",
							"render_method": "alpha_test"
						},
						"block": {
							"texture": "vc_electrum",
							"render_method": "alpha_test"
						},
						"grate": {
							"texture": "vc_discharged_gloricalium_grate",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "query.block_state('minecraft:block_face') == 'north'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							180,
							0
						]
					}
				}
			},
			{
				"condition": "query.block_state('minecraft:block_face') == 'east'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							90,
							0
						]
					}
				}
			},
			{
				"condition": "query.block_state('minecraft:block_face') == 'west'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							270,
							0
						]
					}
				}
			},
			{
				"condition": "!(query.block_state('minecraft:block_face') == 'up' || query.block_state('minecraft:block_face') == 'down')",
				"components": {
					"minecraft:geometry": "geometry.advanced_hopper_side"
				}
			}
		]
	}
}