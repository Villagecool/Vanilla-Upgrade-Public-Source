{
	"format_version": "1.21.50",
	"minecraft:block": {
		"description": {
			"identifier": "vc:copper_campfire",
			"menu_category": {
				"category": "none",
				"group": "itemGroup.name.commands"
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": [
						"minecraft:cardinal_direction"
					]
				}
			},
			"states": {
				"vc:lit": [
					true,
					false
				]
			}
		},
		"components": {
			"tag:wood": {},
            "tag:minecraft:is_axe_item_destructible": {},
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 3
			},
			"minecraft:flammable": {
				"catch_chance_modifier": 5,
				"destroy_chance_modifier": 0
			},
			"minecraft:light_dampening": 0,
			"minecraft:custom_components": [
				"vc:campfire"
			],
			"minecraft:tick": {
				"looping": true,
				"interval_range": [
					10,
					16
				]
			},
			"minecraft:liquid_detection": {
				"detection_rules": [{
					"can_contain_liquid": true,
					"liquid_type": "water",
					"on_liquid_touches": "blocking"
				}]
			},
			"minecraft:geometry": "geometry.campfire",
			"minecraft:selection_box": {
				"origin": [
					-8,
					0,
					-8
				],
				"size": [
					16,
					7,
					16
				]
			},
			"minecraft:collision_box": {
				"origin": [
					-8,
					0,
					-8
				],
				"size": [
					16,
					7,
					16
				]
			}
		},
		"permutations": [
			{
				"condition": "query.block_state('minecraft:cardinal_direction') == 'east' || query.block_state('minecraft:cardinal_direction') == 'west'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							90,
							0
						]
					}
				}
			},
			{
				"condition": "query.block_state('vc:lit') == true",
				"components": {
					"minecraft:tick": {
						"looping": true,
						"interval_range": [
							10,
							16
						]
					},
					"minecraft:geometry": "geometry.campfire",
					"minecraft:material_instances": {
						"fire": {
							"texture": "vc_copper_campfire",
							"render_method": "alpha_test",
							"face_dimming": false,
							"ambient_occlusion": false
						},
						"logs_lit": {
							"texture": "vc_copper_campfire_log_lit",
							"render_method": "alpha_test",
							"face_dimming": false,
							"ambient_occlusion": false
						},
						"*": {
							"texture": "campfire_log",
							"render_method": "alpha_test",
							"face_dimming": false,
							"ambient_occlusion": false
						}
					},
					"minecraft:light_emission": 15
				}
			},
			{
				"condition": "query.block_state('vc:lit') == false",
				"components": {
					"minecraft:light_dampening": 15,
					"minecraft:material_instances": {
						"*": {
							"texture": "campfire_log",
							"render_method": "alpha_test",
							"face_dimming": true,
							"ambient_occlusion": true
						}
					},
					"minecraft:geometry": "geometry.campfire_unlit"
				}
			}
		]
