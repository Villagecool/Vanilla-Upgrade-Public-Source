{
	"format_version": "1.21.50",
	"use_beta_features": false,
	"minecraft:block": {
		"description": {
			"identifier": "vc:quartz_brick_wall",
			"menu_category": {
				"category": "construction",
				"group": "itemGroup.name.walls"
			},
			"states": {
				"vc:connection_north": [false,true],
				"vc:connection_east": [false,true],
				"vc:connection_south": [false,true],
				"vc:connection_west": [false,true],
				"vc:post": [ true, false ],
				"vc:north": [ "none", "tall", "short" ],
				"vc:south": [ "none", "tall", "short" ],
				"vc:east": [ "none", "tall", "short" ],
				"vc:west": [ "none", "tall", "short" ]
			}
		},
		"components": {
			"tag:wood": {},
      		"tag:minecraft:is_pickaxe_item_destructible": {},
			"tag:fence": {},
			"minecraft:custom_components": [
				"vc:wall", "vc:fence"
			],
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 3
			},
			"minecraft:destructible_by_explosion": {
				"explosion_resistance": 0.8
			},
      		"minecraft:item_visual": {
				"geometry": "geometry.wall_item",
        		"material_instances": {
				  "*": {
						"texture": "quartz_bricks"
				  }
      		  }
      		},
			"minecraft:liquid_detection": {
				"detection_rules": [{
					"can_contain_liquid": true,
					"liquid_type": "water",
					"on_liquid_touches": "blocking"
				}]
			},
			"minecraft:tick": {
				"interval_range": [
					1,
					1
				],
				"looping": true
			},
			"minecraft:light_dampening": 0,
			"minecraft:geometry": {
				"identifier": "geometry.wall",
				"bone_visibility": {
					"north": "query.block_state('vc:north') != 'none'",
					"east":   "query.block_state('vc:east') != 'none'",
					"south": "query.block_state('vc:south') != 'none'",
					"west":   "query.block_state('vc:west') != 'none'",
					"north_tall": "query.block_state('vc:north') == 'tall'",
					"east_tall":   "query.block_state('vc:east') == 'tall'",
					"south_tall": "query.block_state('vc:south') == 'tall'",
					"west_tall":   "query.block_state('vc:west') == 'tall'",
					"post":   "query.block_state('vc:post') == true"
				}
			},
			"minecraft:selection_box": {
				"origin": [
					-4,
					0,
					-4
				],
				"size": [
					8,
					16,
					8
				]
			},
			"minecraft:collision_box": {
				"origin": [
					-4,
					0,
					-4
				],
				"size": [
					8,
					16,
					8
				]
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "quartz_bricks"
				}
			}
		}
	}
}